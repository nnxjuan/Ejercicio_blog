<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Articulos</title>
  </head>
  <body>
    <!-- ACA VA EL HEADER -->
    <%- include ('partials/navbar') %>

    <!-- ACA VA EL HERO -->
    <section>
      <div>
        <div class="px-4 py-5 my-5 text-center">
          <h4 class="display-8 fw-bold"><%= article.title %></h4>
          <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
              Creado por <%= article.author.firstname %> <%=
              article.author.lastname %> el <%= article.date %>
            </p>
            <img src="/img/<%=article.img %>" alt="image" />
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center"></div>
          </div>
        </div>
      </div>
    </section>
    <!--  ACA VA EL MAIN -->
    <section>
      <div class="container text-left">
        <div class="row">
          <div class="col">
            <p><%= article.content %></p>
          </div>
        </div>
      </div>
    </section>

    <!-- ACA VA EL FORM -->
    <form method="POST" action="/comentarios/article/<%= article.id %>">
      <section class="text-center container">
        <h2 class="mt-5">Add your comments</h2>
        <div class="mb-3">
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Name"
            name="name"
          />
        </div>
        <div class="mb-3">
          <textarea class="form-control" id="e" rows="3" name="text"></textarea>
          <button class="form-control bg-primary mt-3" id="" rows="3">
            SEND
          </button>
        </div>
      </section>
    </form>

    <!-- ACA VAN LOS COMENTARIOS -->
    <section class="text-center">
      <h2 class="mt-5">Comments</h2>
      <% for ( comment of comments) {%>
      <figure class="text-center">
        <blockquote class="blockquote">
          <p><%= comment.text %></p>
        </blockquote>
        <figcaption class="blockquote-footer">
          <%= comment.name %>
          <cite title="Source Title"><%= comment.date %></cite>
          <% if(user) { if (user.role.code >= 300){ %>
          <a
            href="/comentarios/edit/<%=comment.id %>"
            class="form-control bg-primary mt-3"
            >EDIT</a
          >
          <% }} %>
        </figcaption>
      </figure>
      <% } %>
    </section>

    <!-- FOOTER -->
    <%- include ('partials/footer') %>
  </body>
</html>
