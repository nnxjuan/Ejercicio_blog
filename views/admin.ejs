<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <p class="alert alert-dark"><%= user.role.name %></p>

    <div class="container mt-4">
      <a href="/admin/create" class="btn btn-success">nuevo</a>

      <% if(user) { if (user.role.code >= 400){ %>
      <a href="/privado/admin/users" class="btn btn-danger">Users</a>
      <% }} %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Date</th>
            <th scope="col">Author</th>
            <th scope="col">Functions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const article of articles) {%>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td>
              <figure class="figure">
                <img
                  src="/img/<%=article.img%>"
                  class="figure-img img-fluid rounded"
                  alt="image"
                />
              </figure>
            </td>
            <td><%= article.date %></td>
            <td>
              <%= article.author.firstname %> <%= article.author.lastname %>
            </td>
            <td>
              <div>
                <a
                  href="/privado/admin/edit/<%= article.id %>  "
                  class="btn btn-primary"
                  >Editar</a
                >
                <a
                  href="/privado/admin/delet/<%= article.id %>  "
                  class="btn btn-danger"
                  >Eliminar</a
                >
              </div>
            </td>
          </tr>

          <% }%>
        </tbody>
      </table>
      <%- include('partials/footer') %>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"
      ></script>
    </div>
  </body>
</html>
